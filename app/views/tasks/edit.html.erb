<h1>Edit a task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>

  <div class="btn btn-success">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>


